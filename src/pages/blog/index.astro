---
import BaseLayout from '../../layouts/BaseLayout.astro';
import * as contentful from 'contentful';

// 連接 Contentful
const client = contentful.createClient({
  space: import.meta.env.CONTENTFUL_SPACE_ID,
  accessToken: import.meta.env.CONTENTFUL_ACCESS_TOKEN,
  environment: 'master',
});

// 獲取所有文章
const response = await client.getEntries({
  content_type: 'blogPost',
  order: ['-fields.date'],
});

const posts = response.items.map((item: any) => ({
  title: item.fields.title,
  slug: item.fields.slug,
  date: new Date(item.fields.date).toISOString().split('T')[0],
  summary: item.fields.summary,
  category: item.fields.category,
  coverImage: item.fields.coverImage?.fields?.file?.url 
    ? `https:${item.fields.coverImage.fields.file.url}` 
    : 'https://images.unsplash.com/photo-1621905251918-48416bd8575a?w=600'
}));
---
cat >> src/pages/blog/index.astro << 'EOF'

<style>
  h1 {
    font-weight: 600;
    color: #2C3E50;
  }
  
  .category-filters {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .category-btn {
    padding: 0.5rem 1.25rem;
    border: 2px solid #E8D5C4;
    background: white;
    color: #2C3E50;
    border-radius: 25px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }
  
  .category-btn:hover {
    background: #E8D5C4;
    color: #2C3E50;
    transform: translateY(-2px);
  }
  
  .category-btn.active {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
  }
  
  .blog-list {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .post-card {
    display: flex;
    gap: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
  }
  
  .post-card:hover {
    box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    transform: translateY(-4px);
  }
  
  .post-image {
    width: 280px;
    height: 200px;
    flex-shrink: 0;
    overflow: hidden;
  }
  
  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .post-card:hover .post-image img {
    transform: scale(1.1);
  }
  
  .post-content {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .post-category {
    display: inline-block;
    background: var(--accent);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    width: fit-content;
  }
  
  .post-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2C3E50;
    margin-bottom: 0.5rem;
  }
  
  .post-card:hover .post-title {
    color: #C19A6B;
  }
  
  .post-date {
    font-size: 0.9rem;
    color: #6B7280;
    margin-bottom: 0.75rem;
  }
  
  .post-summary {
    font-size: 1rem;
    color: #4B5563;
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .post-card {
      flex-direction: column;
    }
    
    .post-image {
      width: 100%;
      height: 200px;
    }
    
    .category-filters {
      padding: 0 1rem;
    }
  }
</style>

<BaseLayout title="知識分享 - 青曦空間設計">
  <div style="max-width: 1200px; margin: 0 auto; padding: 4rem 1rem;">
    <h1 style="font-size: 2.5rem; font-weight: 600; text-align: center; margin-bottom: 2rem; color: #2C3E50;">知識分享</h1>
    
    <div class="category-filters">
      <button class="category-btn active" data-category="全部">全部</button>
      <button class="category-btn" data-category="水電篇">水電篇</button>
      <button class="category-btn" data-category="木工篇">木工篇</button>
      <button class="category-btn" data-category="泥作篇">泥作篇</button>
      <button class="category-btn" data-category="油漆篇">油漆篇</button>
      <button class="category-btn" data-category="估價篇">估價篇</button>
      <button class="category-btn" data-category="設計篇">設計篇</button>
    </div>
    
    <div class="blog-list">
      {posts.map(post => (
        <a href={`/blog/${post.slug}`} class="post-card" data-post-category={post.category}>
          <div class="post-image">
            <img src={post.coverImage} alt={post.title} />
          </div>
          <div class="post-content">
            <span class="post-category">{post.category}</span>
            <h2 class="post-title">{post.title}</h2>
            <p class="post-date">{post.date}</p>
            <p class="post-summary">{post.summary}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
  
  <script>
    const categoryButtons = document.querySelectorAll('.category-btn');
    const postCards = document.querySelectorAll('.post-card');
    
    categoryButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedCategory = button.dataset.category;
        
        categoryButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        postCards.forEach(card => {
          const postCategory = card.dataset.postCategory;
          
          if (selectedCategory === '全部' || postCategory === selectedCategory) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  </script>
</BaseLayout>
