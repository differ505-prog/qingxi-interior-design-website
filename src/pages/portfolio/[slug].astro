---
import BaseLayout from '../../layouts/BaseLayout.astro';

export function getStaticPaths() {
  return [
    { params: { slug: 'modern-nordic-apartment' } },
    { params: { slug: 'industrial-loft' } },
    { params: { slug: 'minimalist-japanese' } }
  ];
}

const { slug } = Astro.params;

const projectData = {
  'modern-nordic-apartment': {
    title: '現代北歐風公寓',
    bannerImage: 'https://images.unsplash.com/photo-1556912167-f556f1f39faa?w=1200',
    story: '這是一個25坪的溫馨小宅，屋主希望打造充滿自然光線的北歐風格。我們使用大量白色與木質元素，搭配綠色植栽，創造出舒適放鬆的居家氛圍。',
    gallery: [
      'https://images.unsplash.com/photo-1556912167-f556f1f39faa?w=600',
      'https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?w=600',
      'https://images.unsplash.com/photo-1556909172-54557c7e4fb7?w=600'
    ]
  }
};

const project = projectData[slug] || projectData['modern-nordic-apartment'];
---

<BaseLayout title={`${project.title} - 作品集`}>
  <div class="w-full">
    <img src={project.bannerImage} alt={project.title} class="w-full h-96 object-cover" />
  </div>
  
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">{project.title}</h1>
    
    <div class="prose max-w-none mb-12">
      <h2 class="text-2xl font-bold mb-4">設計故事</h2>
      <p class="text-gray-700 text-lg leading-relaxed">{project.story}</p>
    </div>
    
    <div>
      <h2 class="text-2xl font-bold mb-6">作品圖集</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {project.gallery.map(image => (
          <img src={image} alt="作品圖片" class="w-full h-64 object-cover rounded-lg shadow-md" />
        ))}
      </div>
    </div>
  </div>
</BaseLayout>