<style>
  .contact-container {
    min-height: calc(100vh - 80px);
    margin-top: 80px;
    padding: 4rem 2rem;
    background: #FAFAFA;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content-wrapper {
    max-width: 900px;
    width: 100%;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 300;
    color: #2C3E50;
    text-align: center;
    margin-bottom: 0.5rem;
    letter-spacing: 0.3em;
  }

  .subtitle {
    font-size: 1rem;
    color: #78909C;
    text-align: center;
    margin-bottom: 1rem;
  }

  .description {
    text-align: center;
    color: #546E7A;
    line-height: 1.8;
    margin-bottom: 3rem;
  }

  /* 兩大主按鈕 */
  .main-ctas {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .cta-card {
    background: #FFFFFF;
    border: 1px solid #E0E0E0;
    padding: 3rem 2rem;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    aspect-ratio: 1;
  }

  .cta-card:hover {
    border-color: #2C3E50;
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .card-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .line-color {
    color: #C0C0C0;
  }

  .form-color {
    color: #C0C0C0;
  }

  .cta-card:hover .line-color {
    color: #06C755;
  }

  .cta-card:hover .form-color {
    color: #4A90E2;
  }

  .card-title {
    font-size: 1.1rem;
    color: #2C3E50;
    margin: 0;
    font-weight: 400;
  }

  /* 底部社群圖示 */
  .social-section {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .social-icon-small {
    width: 54px;
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #FFFFFF;
    border: 1px solid #E0E0E0;
    border-radius: 50%;
    color: #909090;
    transition: all 0.3s ease;
  }

  .social-icon-small:hover {
    background: #2C3E50;
    border-color: #2C3E50;
    color: white;
    transform: translateY(-3px);
  }

  /* 手機版 */
  @media (max-width: 768px) {
    .contact-container {
      margin-top: 60px;
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .main-ctas {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cta-card {
      aspect-ratio: auto;
      padding: 2.5rem 2rem;
    }

    .card-icon {
      width: 60px;
      height: 60px;
    }

    .social-icon-small {
      width: 48px;
      height: 48px;
    }

    .social-section {
      gap: 0.75rem;
    }
  }
</style>
