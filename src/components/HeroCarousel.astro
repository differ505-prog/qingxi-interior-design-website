---
import { getHeroCarousel } from "../lib/contentful";

const carouselItems = await getHeroCarousel();
---

<section class="hero-carousel">
  <div class="carousel-container">
    {
      carouselItems.map((item, index) => (
        <div
          class={`carousel-slide ${item.animationEffect}`}
          data-active={index === 0 ? "true" : "false"}
        >
          <img
            src={`https:${item.image}`}
            alt={item.title}
            class="carousel-image"
          />
        </div>
      ))
    }
  </div>

  <button class="carousel-btn prev" aria-label="Previous slide">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
    >
      <polyline points="15 18 9 12 15 6"></polyline>
    </svg>
  </button>
  <button class="carousel-btn next" aria-label="Next slide">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
    >
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </button>
</section>

<style>
  .hero-carousel {
    position: relative;
    width: 100%;
    height: calc(100vh - 80px);
    margin-top: 80px;
    overflow: hidden;
    background: #000;
  }

  .carousel-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  .carousel-slide[data-active="true"] {
    opacity: 1;
    z-index: 1;
  }

  .carousel-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform-origin: center center;
  }

  .carousel-slide.zoomIn[data-active="true"] .carousel-image {
    animation: zoomIn 10s ease-out forwards;
  }

  .carousel-slide.zoomOut[data-active="true"] .carousel-image {
    animation: zoomOut 10s ease-out forwards;
  }

  .carousel-slide.panLeft[data-active="true"] .carousel-image {
    animation: panLeft 10s ease-out forwards;
  }

  .carousel-slide.panRight[data-active="true"] .carousel-image {
    animation: panRight 10s ease-out forwards;
  }

  .carousel-slide.kenBurns[data-active="true"] .carousel-image {
    animation: kenBurns 10s ease-out forwards;
  }

  @keyframes zoomIn {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.3);
    }
  }

  @keyframes zoomOut {
    from {
      transform: scale(1.3);
    }
    to {
      transform: scale(1);
    }
  }

  @keyframes panLeft {
    from {
      transform: translateX(0) scale(1.2);
    }
    to {
      transform: translateX(-10%) scale(1.2);
    }
  }

  @keyframes panRight {
    from {
      transform: translateX(0) scale(1.2);
    }
    to {
      transform: translateX(10%) scale(1.2);
    }
  }

  @keyframes kenBurns {
    from {
      transform: scale(1) translate(0, 0);
    }
    to {
      transform: scale(1.3) translate(-8%, -5%);
    }
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(138, 163, 135, 0.3);
    border: 2px solid rgba(138, 163, 135, 0.6);
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(8px);
  }

  .carousel-btn:hover {
    background: rgba(138, 163, 135, 0.6);
    border-color: rgba(138, 163, 135, 0.9);
    transform: translateY(-50%) scale(1.15);
    box-shadow: 0 4px 15px rgba(138, 163, 135, 0.4);
  }

  .carousel-btn.prev {
    left: 30px;
  }

  .carousel-btn.next {
    right: 30px;
  }

  @media (max-width: 768px) {
    .hero-carousel {
      height: 70vh;
      margin-top: 60px;
    }

    .carousel-btn {
      width: 45px;
      height: 45px;
    }

    .carousel-btn.prev {
      left: 15px;
    }

    .carousel-btn.next {
      right: 15px;
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const slides = document.querySelectorAll(".carousel-slide");
    const prevBtn = document.querySelector(".carousel-btn.prev");
    const nextBtn = document.querySelector(".carousel-btn.next");

    if (!slides.length) return;

    let currentIndex = 0;
    let autoPlayInterval;

    function showSlide(index) {
      slides.forEach((slide) => slide.setAttribute("data-active", "false"));
      slides[index].setAttribute("data-active", "true");
      currentIndex = index;
    }

    function nextSlide() {
      const next = (currentIndex + 1) % slides.length;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(prev);
    }

    function startAutoPlay() {
      autoPlayInterval = setInterval(nextSlide, 6000);
    }

    function stopAutoPlay() {
      clearInterval(autoPlayInterval);
    }

    if (prevBtn) {
      prevBtn.addEventListener("click", (e) => {
        e.preventDefault();
        prevSlide();
        stopAutoPlay();
        startAutoPlay();
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener("click", (e) => {
        e.preventDefault();
        nextSlide();
        stopAutoPlay();
        startAutoPlay();
      });
    }

    showSlide(0);
    startAutoPlay();

    document.addEventListener("visibilitychange", () => {
      if (document.hidden) {
        stopAutoPlay();
      } else {
        startAutoPlay();
      }
    });
  });
</script>
