---
const { title, coverImage, summary, slug } = Astro.props;
---

<style>
  .card {
    display: block;
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
  }
  
  .card:hover {
    transform: scale(1.05);
    box-shadow: 0 20px 25px rgba(0,0,0,0.15);
  }
  
  .card img {
    width: 100%;
    height: 16rem;
    object-fit: cover;
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card h3 {
    font-size: 1.25rem;
    font-weight: bold;
    color: #2C3E50;
    margin-bottom: 0.5rem;
  }
  
  .card p {
    color: #6B7280;
  }
</style>

<a href={`/portfolio/${slug}`} class="card">
  <img src={coverImage} alt={title} />
  <div class="card-content">
    <h3>{title}</h3>
    <p>{summary}</p>
  </div>
</a>