---
const { title, coverImage, summary, slug } = Astro.props;
---

<style>
  .card {
    display: block;
    background: var(--white);
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border: 2px solid var(--gray-bg);
    overflow: hidden;
    transition: all 0.4s ease;
    text-decoration: none;
    color: inherit;
  }
  
  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(129, 199, 212, 0.2);
    border-color: var(--tiffany-light);
  }
  
  .card img {
    width: 100%;
    height: 12rem;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.4s ease, transform 0.4s ease;
  }
  
  .card:hover img {
    filter: grayscale(0%);
    transform: scale(1.08);
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--gray-dark);
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }
  
  .card:hover h3 {
    color: var(--tiffany-primary);
  }
  
  .card p {
    color: var(--gray-medium);
    line-height: 1.6;
  }
</style>

<a href={`/portfolio/${slug}`} class="card">
  <img src={coverImage} alt={title} />
  <div class="card-content">
    <h3>{title}</h3>
    <p>{summary}</p>
  </div>
</a>
