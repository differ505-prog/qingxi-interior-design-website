---
const { title, coverImage, summary, slug } = Astro.props;
---

<style>
  .card {
    display: block;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    overflow: hidden;
    transition: all 0.4s ease;
    text-decoration: none;
    color: inherit;
  }
  
  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.15);
  }
  
  .card img {
    width: 100%;
    height: 12rem;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.4s ease, transform 0.4s ease;
  }
  
  .card:hover img {
    filter: grayscale(0%);
    transform: scale(1.08);
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2C3E50;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }
  
  .card:hover h3 {
    color: #3B82F6;
  }
  
  .card p {
    color: #6B7280;
    line-height: 1.6;
  }
</style>

<a href={`/portfolio/${slug}`} class="card">
  <img src={coverImage} alt={title} />
  <div class="card-content">
    <h3>{title}</h3>
    <p>{summary}</p>
  </div>
</a>
