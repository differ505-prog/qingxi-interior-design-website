---
// 建置中页面
const siteName = "青曦空間設計";
const contactLine = "https://line.me/R/ti/p/@example";
const contactEmail = "qingxi.ds@outlook.com";
---

<!doctype html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>網站建置中 - {siteName}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --gray-darkest: #2f2f2f;
        --gray-dark: #4a4a4a;
        --gray-medium: #7a7a7a;
        --gray-light: #b0b0b0;
        --gray-lighter: #d8d8d8;
        --gray-bg: #f5f5f5;
        --white: #ffffff;
        --off-white: #fafafa;
        --resort-primary: #81c7d4;
        --resort-dark: #69b8c4;
        --resort-light: #a0d9d9;
        --resort-pale: #e6f5f7;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Noto Sans TC", sans-serif;
        background: linear-gradient(
          135deg,
          var(--gray-darkest) 0%,
          var(--gray-dark) 100%
        );
        color: var(--white);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        overflow: hidden;
      }

      .container {
        text-align: center;
        max-width: 600px;
        width: 100%;
        position: relative;
        z-index: 1;
      }

      .logo {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: 0.1em;
        color: var(--white);
      }

      .title {
        font-size: 3rem;
        font-weight: 300;
        margin-bottom: 1.5rem;
        letter-spacing: 0.05em;
        animation: fadeInUp 1s ease-out;
      }

      .subtitle {
        font-size: 1.25rem;
        color: var(--gray-light);
        margin-bottom: 3rem;
        line-height: 1.6;
        animation: fadeInUp 1s ease-out 0.2s both;
      }

      .status-badge {
        display: inline-block;
        background: var(--resort-primary);
        color: var(--white);
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 3rem;
        animation: fadeInUp 1s ease-out 0.4s both;
        box-shadow: 0 4px 15px rgba(129, 199, 212, 0.3);
      }

      .contact-section {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        animation: fadeInUp 1s ease-out 0.6s both;
      }

      .contact-title {
        font-size: 1.1rem;
        color: var(--gray-light);
        margin-bottom: 1.5rem;
      }

      .contact-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .contact-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        background: var(--white);
        color: var(--gray-dark);
        text-decoration: none;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 2px solid transparent;
      }

      .contact-btn:hover {
        background: var(--resort-primary);
        color: var(--white);
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(129, 199, 212, 0.4);
      }

      .contact-btn svg {
        width: 24px;
        height: 24px;
      }

      .coming-soon-text {
        font-size: 0.9rem;
        color: var(--gray-light);
        margin-top: 2rem;
        animation: fadeInUp 1s ease-out 0.8s both;
      }

      /* 背景動畫 */
      .bg-animation {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
      }

      .bg-circle {
        position: absolute;
        border-radius: 50%;
        background: var(--resort-primary);
        opacity: 0.1;
        animation: float 20s infinite ease-in-out;
      }

      .bg-circle:nth-child(1) {
        width: 300px;
        height: 300px;
        top: 10%;
        left: 10%;
        animation-delay: 0s;
      }

      .bg-circle:nth-child(2) {
        width: 200px;
        height: 200px;
        top: 60%;
        right: 10%;
        animation-delay: 5s;
      }

      .bg-circle:nth-child(3) {
        width: 150px;
        height: 150px;
        bottom: 20%;
        left: 20%;
        animation-delay: 10s;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes float {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        33% {
          transform: translate(30px, -30px) scale(1.1);
        }
        66% {
          transform: translate(-20px, 20px) scale(0.9);
        }
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2rem;
        }

        .subtitle {
          font-size: 1rem;
        }

        .contact-buttons {
          flex-direction: column;
        }

        .contact-btn {
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="bg-animation">
      <div class="bg-circle"></div>
      <div class="bg-circle"></div>
      <div class="bg-circle"></div>
    </div>

    <div class="container">
      <div class="logo">{siteName}</div>
      <h1 class="title">網站建置中</h1>
      <p class="subtitle">我們正在精心打造一個更好的體驗<br />敬請期待！</p>

      <div class="status-badge">即將上線</div>

      <div class="contact-section">
        <p class="contact-title">在等待的同時，歡迎與我們聯繫</p>
        <div class="contact-buttons">
          <a href={contactLine} target="_blank" class="contact-btn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63h2.386c.346 0 .627.285.627.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63.346 0 .628.285.628.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.348 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.282.629-.629.629M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.078 9.436-6.975C23.176 14.393 24 12.458 24 10.314"
              ></path>
            </svg>
            <span>加入 LINE</span>
          </a>
          <a href={`mailto:${contactEmail}`} class="contact-btn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>發送 Email</span>
          </a>
        </div>
      </div>

      <p class="coming-soon-text">預計上線時間：2025年第一季</p>
    </div>
  </body>
</html>
