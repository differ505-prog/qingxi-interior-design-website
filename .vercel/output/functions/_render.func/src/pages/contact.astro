<style>
  .contact-container {
    min-height: calc(100vh - 80px);
    margin-top: 80px;
    padding: 4rem 2rem;
    background: var(--off-white);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content-wrapper {
    max-width: 900px;
    width: 100%;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--gray-dark);
    text-align: center;
    margin-bottom: 0.5rem;
    letter-spacing: 0.3em;
  }

  .subtitle {
    font-size: 1rem;
    color: var(--gray-medium);
    text-align: center;
    margin-bottom: 1rem;
  }

  .description {
    text-align: center;
    color: var(--gray-medium);
    line-height: 1.8;
    margin-bottom: 3rem;
  }

  /* å…©å¤§ä¸»æŒ‰éˆ• */
  .main-ctas {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 4rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-card {
    background: var(--white);
    border: 2px solid var(--gray-bg);
    padding: 2.5rem 1.5rem;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }

  .cta-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      var(--resort-pale) 0%,
      var(--resort-light) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cta-card:hover::before {
    opacity: 0.2;
  }

  .cta-card:hover {
    border-color: var(--resort-primary);
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(138, 163, 135, 0.25);
  }

  .card-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .card-icon svg {
    width: 56px;
    height: 56px;
  }

  .booking-color,
  .phone-color {
    color: var(--gray-light);
  }

  .cta-card:hover .booking-color,
  .cta-card:hover .phone-color {
    color: var(--resort-primary);
    transform: scale(1.1);
  }

  .card-title {
    font-size: 1.1rem;
    color: var(--gray-dark);
    margin: 0;
    font-weight: 600;
    position: relative;
    z-index: 1;
  }

  .card-subtitle {
    font-size: 0.9rem;
    color: var(--gray-medium);
    margin: 0;
    position: relative;
    z-index: 1;
  }

  /* è¯çµ¡è³‡è¨Š */
  .contact-info {
    background: var(--white);
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    margin-bottom: 3rem;
  }

  .contact-info h2 {
    font-size: 1.8rem;
    color: var(--gray-dark);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2.5rem;
  }

  .info-item {
    text-align: center;
  }

  .info-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .info-item h4 {
    font-size: 1.1rem;
    color: var(--resort-primary);
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .info-item p {
    color: var(--gray-medium);
    line-height: 1.6;
    margin: 0.5rem 0;
  }

  .small-text {
    font-size: 0.85rem;
    color: var(--gray-light);
  }

  .map-link {
    display: inline-block;
    margin-top: 0.5rem;
    color: var(--resort-primary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .map-link:hover {
    color: var(--resort-dark);
    transform: translateX(3px);
  }

  /* ç¤¾ç¾¤é€£çµ */
  .social-section {
    text-align: center;
  }

  .social-section h3 {
    font-size: 1.2rem;
    color: var(--gray-dark);
    margin-bottom: 1.5rem;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .social-icon-small {
    width: 54px;
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--white);
    border: 2px solid var(--gray-bg);
    border-radius: 50%;
    color: var(--gray-light);
    transition: all 0.3s ease;
  }

  .social-icon-small:hover {
    background: var(--resort-primary);
    border-color: var(--resort-primary);
    color: white;
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 4px 12px rgba(138, 163, 135, 0.3);
  }

  /* æ‰‹æ©Ÿç‰ˆ */
  @media (max-width: 768px) {
    .contact-container {
      margin-top: 60px;
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .main-ctas {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 3rem;
    }

    .cta-card {
      padding: 2rem 1.25rem;
    }

    .contact-info {
      padding: 2rem 1.5rem;
    }

    .contact-info h2 {
      font-size: 1.5rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
