<style>
  .portfolio-container {
    min-height: calc(100vh - 80px);
    margin-top: 80px;
    padding: 4rem 2rem;
    background: var(--off-white);
  }

  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
  }

  .header-section {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-subtitle {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--gray-medium);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 400;
    color: var(--gray-dark);
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
  }

  .subtitle {
    font-size: 1.1rem;
    color: var(--gray-medium);
    line-height: 1.8;
  }

  .rooms-grid {
    display: grid;
    gap: 3rem;
    margin-bottom: 5rem;
  }

  .room-card {
    background: var(--white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 2px solid var(--gray-bg);
    display: grid;
    grid-template-columns: 400px 1fr;
    transition: all 0.3s ease;
  }

  .room-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(138, 163, 135, 0.15);
    border-color: var(--resort-light);
  }

  .room-image {
    position: relative;
    height: 100%;
    min-height: 300px;
    overflow: hidden;
  }

  .room-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .room-card:hover .room-image img {
    transform: scale(1.05);
  }

  .room-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--resort-accent);
    color: var(--white);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .room-badge.premium {
    background: var(--resort-primary);
  }

  .room-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }

  .room-content h3 {
    font-size: 1.8rem;
    font-weight: 500;
    color: var(--gray-dark);
    margin-bottom: 1rem;
  }

  .room-description {
    color: var(--gray-medium);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .room-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .feature-tag {
    background: var(--resort-pale);
    color: var(--resort-dark);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.85rem;
  }

  .room-info {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
    padding: 1rem 0;
    border-top: 1px solid var(--gray-bg);
    border-bottom: 1px solid var(--gray-bg);
  }

  .room-capacity,
  .room-size {
    font-size: 0.95rem;
    color: var(--gray-medium);
  }

  .room-actions {
    display: flex;
    gap: 1rem;
    margin-top: auto;
  }

  .detail-btn {
    padding: 0.875rem 1.5rem;
    background: var(--white);
    color: var(--resort-primary);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
    display: inline-block;
    border: 2px solid var(--resort-primary);
    flex: 1;
  }

  .detail-btn:hover {
    background: var(--resort-pale);
    transform: translateY(-2px);
  }

  .book-btn {
    padding: 0.875rem 2rem;
    background: var(--resort-primary);
    color: var(--white);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
    display: inline-block;
    align-self: flex-start;
  }

  .book-btn:hover {
    background: var(--resort-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(138, 163, 135, 0.3);
  }

  .booking-info {
    background: var(--white);
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  }

  .booking-info h2 {
    font-size: 2rem;
    color: var(--gray-dark);
    margin-bottom: 2rem;
    text-align: center;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .info-item {
    text-align: center;
  }

  .info-item h4 {
    font-size: 1.1rem;
    color: var(--resort-primary);
    margin-bottom: 0.5rem;
  }

  .info-item p {
    color: var(--gray-medium);
    line-height: 1.6;
  }

  .booking-cta {
    text-align: center;
  }

  .main-book-btn {
    padding: 1rem 3rem;
    background: var(--resort-primary);
    color: var(--white);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.1rem;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .main-book-btn:hover {
    background: var(--resort-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(138, 163, 135, 0.3);
  }

  @media (max-width: 968px) {
    .room-card {
      grid-template-columns: 1fr;
    }

    .room-image {
      min-height: 250px;
    }
  }

  @media (max-width: 768px) {
    .portfolio-container {
      margin-top: 60px;
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .rooms-grid {
      gap: 2rem;
    }

    .room-content {
      padding: 1.5rem;
    }

    .room-content h3 {
      font-size: 1.5rem;
    }

    .booking-info {
      padding: 2rem 1.5rem;
    }

    .booking-info h2 {
      font-size: 1.5rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
